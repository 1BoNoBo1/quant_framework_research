# ==============================================
# CONFIGURATION GÉNÉRALE
# ==============================================

# Environnement (local, staging, production)
ENVIRONMENT=local
DEBUG=true

# Timezone
TZ=Europe/Paris

# ==============================================
# DONNÉES & CRYPTO
# ==============================================

# API Binance (pour données historiques et temps réel)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Paires et timeframes
DEFAULT_PAIRS=BTC/USDT,ETH/USDT,BNB/USDT
DEFAULT_TIMEFRAME=1h
BACKTEST_START_DATE=2022-01-01
BACKTEST_END_DATE=2024-12-31

# ==============================================
# FREQTRADE
# ==============================================

# Configuration trading
STAKE_CURRENCY=USDT
STAKE_AMOUNT=1000
MAX_OPEN_TRADES=5
TRADING_MODE=futures
LEVERAGE=1

# Dry run (false pour trading réel)
DRY_RUN=true
DRY_RUN_WALLET=10000

# ==============================================
# MLFLOW (MLOps)
# ==============================================

MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_ARTIFACT_ROOT=s3://mlflow/
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# ==============================================
# MINIO (Stockage S3)
# ==============================================

MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme_strong_password
MINIO_ENDPOINT=localhost:9000
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=changeme_strong_password

# ==============================================
# POSTGRESQL / TIMESCALEDB
# ==============================================

POSTGRES_USER=quantuser
POSTGRES_PASSWORD=changeme_strong_password
POSTGRES_DB=quantdb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ==============================================
# MONITORING & ALERTES
# ==============================================

# Discord webhook pour alertes
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_here

# Telegram bot (optionnel)
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Grafana
GRAFANA_ADMIN_PASSWORD=changeme_strong_password

# ==============================================
# SÉCURITÉ VPS (Production)
# ==============================================

# SSL/TLS
SSL_EMAIL=your@email.com
DOMAIN_NAME=your-domain.com

# Authentification
API_SECRET_KEY=your_very_long_secret_key_here
JWT_SECRET=another_very_long_secret_for_jwt

# ==============================================
# ML PIPELINE
# ==============================================

# Hyperparamètres DMN
DMN_HIDDEN_SIZES=32,64,128
DMN_LEARNING_RATES=0.001,0.0005
DMN_WINDOW_SIZES=32,64,96
DMN_EPOCHS=50

# Paramètres Mean Reversion
MR_Z_ENTRY=1.5
MR_Z_EXIT=0.5
MR_LOOKBACK=50

# Seuils sélection
PSR_MIN_THRESHOLD=0.65
SHARPE_MIN_THRESHOLD=1.2
MAX_DRAWDOWN_THRESHOLD=0.20

# ==============================================
# ORCHESTRATION
# ==============================================

# Fréquences d'exécution (cron format)
PIPELINE_SCHEDULE="0 */4 * * *"  # Toutes les 4h
BACKUP_SCHEDULE="0 2 * * *"      # 2h du matin
MONITORING_SCHEDULE="*/5 * * * *" # Toutes les 5min

# ==============================================
# RESSOURCES SYSTÈME
# ==============================================

# Limites mémoire Docker
JUPYTER_MEMORY_LIMIT=4g
MLFLOW_MEMORY_LIMIT=2g
FREQTRADE_MEMORY_LIMIT=1g
POSTGRES_MEMORY_LIMIT=2g

# GPU (si disponible)
USE_GPU=false
GPU_DEVICE=0